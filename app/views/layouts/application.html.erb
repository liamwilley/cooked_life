<!DOCTYPE html>
<html>
<head>
  <title>Cooked Life</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<body id="page-top" class="modern">

  <!-- Navigation -->
  <!-- NOTE: .navbar-default and .navbar-inverse are both supported with this theme. -->
  <nav class="navbar navbar-inverse navbar-fixed-top navbar-expanded solid-background">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <i class="fa fa-bars"></i> Menu
        </button>
        <a class="navbar-brand page-scroll" href="#page-top">
          <!-- <img src="../../../vendor/assets/images/background/logo.png" class="img-responsive" alt=""> -->
        </a>
      </div>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li class="hidden">
            <a class="page-scroll" href="#page-top"></a>
        </li>
        <li>
          <a href='/'>Home</a> 
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Recipes <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <% if current_user %>
            <li><a href="/recipes/new">Create a New Recipe!</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="/recipes?filter=current_user">My Recipes</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="/recipes">All Recipes!</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="/recipes/random">Random Recipe!</a></li>
            <% else %>
            <li><a href="/login">Login</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="/signup">Sign Up</a></li>
            <% end %>
          </ul>
        </li> 
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Meals <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <% if current_user %>
            <li><a href="/meals/new">Create New Meal!</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="/meals?filter=current_user">My Meals</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="/meals">Check Out Some Meals!</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="/meals/random">Find a Random Meal!</a></li>
            <% else %>
            <li><a href="/login">Login</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="/signup">Sign Up</a></li>
            <% end %>
          </ul>
        </li> 
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Users <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <% if current_user %>
            <li><a href="/users/<%= current_user.id %>">My Account</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="/users/all">All Users</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="/users/random">Find a Random User!</a></li>
            <li role="separator" class="divider"></li>
            <li> <%= link_to "Logout", "/logout", method: :delete %></li>
            <% else %>
            <li><a href="/login">Login</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="/signup">Sign Up</a></li>
            <% end %>
          </ul>
        </li>
        <li>
          <%= form_tag "/search", class: "navbar-form navbar-left", method: :post do%> <!-- refactored to be pretty, ask marks q's about divs -->
            <div class="form-group dark-text">
              <%= label_tag :user_search, "" %>
              <%= text_field_tag :user_search %>
              <%= submit_tag "Search", class: "dark-text btn btn-outline-dark main-search" %>

            </div>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</nav>
<div class="yield-container">
 <% flash.each do |name, message| %>
  <div class="alert alert-<%= name %> alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= message %>
  </div>
  <% end %>
  <%= yield %>
</div>


              <!-- Footer -->
    <footer class="footer" style="background-image: url(<%=image_path 'backgrounds/bg-footer.jpg'%>)"">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-4 contact-details">
                    <h4><i class="fa fa-phone"></i> Call</h4>
                    <p>202-550-2000</p>
                </div>
                <div class="col-md-4 contact-details">
                    <h4><i class="fa fa-map-marker"></i> Visit</h4>
                    <p>The Internet
                        <br>World Wide</p>
                </div>
                <div class="col-md-4 contact-details">
                    <h4><i class="fa fa-envelope"></i> Email</h4>
                    <p><a href="mailto:mail@example.com">cookedLife.help@gmail.com</a>
                    </p>
                </div>
            </div>
            
        </div>
    </footer>
 

</body>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</html>

