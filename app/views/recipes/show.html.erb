<%= link_to "See current user's recipes", "/recipes" %>
<ul>
  <li>Name: <%= @recipe.name %></li>
  <li>User: <%= @recipe.user.name %></li>
  <li>Description: <%= @recipe.description %></li>
  <li>Prep Time: <%= @recipe.prep_time %></li>
  <li>Instructions: <%= @recipe.instructions %></li>
    <ul>Ingredients: 
    <%= @recipe.ingredients_split.each do |ingredient| %>
      <li><%= ingredient %></li>
      <% end %>
    </ul>
  <li>Created At: <%= @recipe.human_friendly_time %></li>
  <li>Prep Time: <%= @recipe.friendly_prep_ time %></li>
</ul>
