    <section id="login">
        <div class="container">
            <div class="row text-center">
                <div class="col-lg-12 wow fadeIn">
                    <h2>Login Or Sign Up</h2>
                    <hr class="colored">
                    <p>At CookedLife we strive to inspire culinary innovation whilest simaltaneously providing an easy to use platform for the Chef inside us all.</p>
                </div>
            </div>
            <div class="row content-row">
                <div class="col-md-4 wow fadeIn" data-wow-delay=".2s">
                    <div class="media">
                        <div class="media-body" class="pull-left">
                          <h1>Login</h1>
                          <%= form_tag '/login', method: :post do %>
                          <div>
                            <%= label_tag :email %>
                            <%= text_field_tag :email %>
                          </div>
                          <div>
                            <%= label_tag :password %>
                            <%= password_field_tag :password %>
                          </div>
                          <%= submit_tag "Submit" %>
                          <% end %>
                        </div>
                        <!-- <div class="pull-right"> -->
                           <a href="/signup" class="btn btn-block btn-full-width">Sign Up Now!</a>
                       <!--  </div> -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    </header>