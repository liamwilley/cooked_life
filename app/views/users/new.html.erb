<div class="row white-text" style="background-image: url(<%=image_path 'backgrounds/bg-header.jpg'%>)">
  <div class="col-md-3"></div>
    <div class="col-md-6">

      <h1 class="h2signupform">Sign Up!</h1>
      <%= form_tag '/users', method: :post, class: "spacedform" do %>

        <div class="form-group">
          <%= label_tag :first_name %>
          <%= text_field_tag :first_name, "", class: "form-control"%>
        </div>
        <div class="form-group">
          <%= label_tag :last_name %>
          <%= text_field_tag :last_name, "", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :email %>
          <%= text_field_tag :email, "", type: "email", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :password %>
          <%= text_field_tag :password, "", type: "password", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :password_confirmation %>
          <%= text_field_tag :password_confirmation, "", type: "password", class: "form-control" %>
        </div>
        <div class="row">
        <div class="form-group dark-text">
          <div class="col-sm-1">
          </div>
          <div class="col-sm-10">
            <button type="submit" class="btn btn-block btn-full-width sign-up-form-button-center">Sign Up!</button>
          </div>
          <div class="col-sm-1">
          </div>
        </div>
        </div>
      <% end %>
  </div>
</div>



