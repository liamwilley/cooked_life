<h1>Edit User</h1>
<%= form_tag "/users/#{params[:id]}", method: :patch do%>

  <div>
  <%= label_tag :first_name %>
  <%= text_field_tag :first_name %>
  </div>
  <div>
  <%= label_tag :last_name %>
  <%= text_field_tag :last_name %>
  </div>
  <div>
  <%= label_tag :email %>
  <%= text_field_tag :email "", type: "email"%>
  </div>
  <div>
  <%= label_tag :password %>
  <%= text_field_tag :password "", type: "password" %>
  </div>
  <div>
  <%= label_tag :password_confirmation %>
  <%= text_field_tag :password_confirmation "", type: "password" %>
  </div>
  <%= submit_tag "Update User" %>
  </div>
<% end %>