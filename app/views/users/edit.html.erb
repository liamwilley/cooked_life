<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <h1>Edit User</h1>
    <%= form_tag "/users/#{params[:id]}", method: :patch do%>

      <div class="form-group">
        <%= label_tag :first_name %>
        <%= text_field_tag :first_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :last_name %>
        <%= text_field_tag :last_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email "", type: "email", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= text_field_tag :password "", type: "password", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :password_confirmation %>
        <%= text_field_tag :password_confirmation "", type: "password", class: "form-control" %>
      </div>
      <div>
        <%= submit_tag "Update User" %>
      </div>
    <% end %>
  </div>
</div>